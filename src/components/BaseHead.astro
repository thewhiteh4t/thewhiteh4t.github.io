---
import '../styles/global.css'
import SEO from '../components/seo.astro'
import JsonLD from './JsonLD.astro'
import type { ImageMetadata } from 'astro'

interface Props {
  title: string
  description: string
  image?: ImageMetadata
}

const isBlogPost = Astro.url.pathname.includes('/blog/')
const { title, description } = Astro.props
---

<!-- Global Metadata -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="theme-color" content="#000000" />
<meta http-equiv="content-language" content="en" />
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="manifest" href="/manifest.json" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
  rel="alternate"
  type="application/rss+xml"
  title="thewhiteh4t - Security Through Hacking"
  href={new URL('rss.xml', Astro.site)}
/>

<!-- Preload Fonts -->
<link 
  rel="preload" 
  href="/fonts/Urbanist-Bold.woff2"
  as="font" 
  type="font/woff2" 
  crossorigin="anonymous"
/>
<link 
  rel="preload" 
  href="/fonts/Inter-Regular.woff2"
  as="font" 
  type="font/woff2" 
  crossorigin="anonymous"
/>
<link 
  rel="preload" 
  href="/fonts/Urbanist-Regular.woff2"
  as="font" 
  type="font/woff2" 
  crossorigin="anonymous"
/>
<link 
  rel="preload" 
  href="/fonts/Inter-Bold.woff2"
  as="font" 
  type="font/woff2" 
  crossorigin="anonymous"
/>
{isBlogPost && (
  <link 
    rel="preload" 
    href="/fonts/FiraMono-Regular.woff2"
    as="font" 
    type="font/woff2" 
    crossorigin="anonymous"
  />
)
}

<!-- SEO Tags -->
<SEO title={title} description={description} />

<!-- Structured Data -->
<JsonLD title={title} description={description} />

<!-- PageFind -->
<link
  href="/pagefind/pagefind-ui.css"
  rel="preload"
  as="style"
  onload="this.onload=null;this.rel='stylesheet'"
/>
